<h1>Sign up</h1>

<%= form_for @user do |f| %>
  <div class="field">
  	<%= f.lable :first_name %>
  	<%= f.text_field :first_name %>
  </div>

  <div class="field">
  	<%= f.lable :last_name %>
  	<%= f.text_field :last_name %>
  </div>

  <div class="field">
  	<%= f.lable :email %>
  	<%= f.text_field :email %>
  </div>

  <div class="field">
  	<%= f.lable :password %>
  	<%= f.password_field :password %>
  </div>

  <div class="field">
  	<%= f.lable :password_confirmation %>
  	<%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
  	<%= f.submit %>
  </div>

<% end %>